{
  "manifest_version": 3,
  "name": "Text Define",
  "version": "1.0",
  "description": "Get definitions for selected text instantly.",
  "permissions": ["contextMenus", "scripting", "activeTab"],
  "host_permissions": ["https://api.dictionaryapi.dev/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
